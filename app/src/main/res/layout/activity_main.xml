<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:columnCount="2"
    android:rowCount="7"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewOnCreateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="onCreate" />

    <TextView
        android:id="@+id/textViewOnCreateNumber"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="0" />

    <TextView
        android:id="@+id/textViewOnStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="onStart" />

    <TextView
        android:id="@+id/textViewOnStartNumber"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="1" />

    <TextView
        android:id="@+id/textViewOnResumeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="onResume" />

    <TextView
        android:id="@+id/textViewOnResumeNumber"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2" />

    <TextView
        android:id="@+id/textViewOnRestartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="onRestart" />

    <TextView
        android:id="@+id/textViewOnRestartNumber"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="3" />

    <TextView
        android:id="@+id/textViewOnPausetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="onPause" />

    <TextView
        android:id="@+id/textViewOnPausetNumber"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4" />

    <TextView
        android:id="@+id/textViewOnStoptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="onStop" />

    <TextView
        android:id="@+id/textViewOnStoptNumber"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="5" />

    <TextView
        android:id="@+id/textViewOnDestroyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="onDestroy" />

    <TextView
        android:id="@+id/textViewOnDestroyNumber"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="6" />
</GridLayout>